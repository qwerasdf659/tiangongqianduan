}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.points-info {
  display: flex;
  align-items: center;
  background: var(--primary-color);
  padding: 12rpx 20rpx;

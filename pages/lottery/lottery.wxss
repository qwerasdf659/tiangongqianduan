/* 强制显示样式 */
.force-visible {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  position: relative !important;
}

/* 🎯 真机兼容 - 中央抽奖按钮样式强化 */
.center-draw-button {
  /* 强制样式优先级 */
  width: 80px !important;
  height: 80px !important;
  border-radius: 40px !important;
  background: linear-gradient(135deg, #FF6B35, #FF8C42) !important;
  color: white !important;
  border: 4px solid white !important;
  font-size: 14px !important;
  font-weight: bold !important;
  text-align: center !important;
  line-height: 72px !important;
  box-shadow: 0 8px 20px rgba(255, 107, 53, 0.8) !important;
  display: block !important;
  position: relative !important;
  margin: 0 !important;
  padding: 0 !important;
  outline: none !important;
  -webkit-appearance: none !important;
  /* 真机兼容性增强 */
  /* 🎯 层级优化：设置适中的z-index，确保按钮可见且不覆盖结果弹窗 */
  z-index: 20 !important;
  pointer-events: auto !important;
  -webkit-transform: translateZ(0) !important;
  transform: translateZ(0) !important;
  will-change: transform !important;
  /* 动画状态 */
  transition: all 0.3s ease !important;
}

/* 真机兼容 - 按钮容器强化 */
.center-button-container {
  position: absolute !important;
  /* 🎯 层级优化：设置适中的z-index，确保按钮可见且不覆盖结果弹窗 */
  z-index: 15 !important;
  pointer-events: auto !important;
  display: block !important;
  width: 80px !important;
  height: 80px !important;
  /* 硬件加速 */
  -webkit-transform: translateZ(0) !important;
  transform: translateZ(0) !important;
  will-change: transform !important;
  /* 🔧 环境兼容性增强 */
  visibility: visible !important;
  opacity: 1 !important;
}

/* 真机兼容 - 各种定位方案 */
.center-button-container.method-transform {
  top: 50% !important;
  left: 50% !important;
  transform: translate(-50%, -50%) translateZ(0) !important;
  -webkit-transform: translate(-50%, -50%) translateZ(0) !important;
}

.center-button-container.method-margin {
  top: 50% !important;
  left: 50% !important;
  margin-top: -40px !important;
  margin-left: -40px !important;
}

.center-button-container.method-fixed {
  top: 90px !important;
  left: 90px !important;
}

/* 抽奖中状态 */
.center-draw-button.drawing {
  opacity: 0.8 !important;
  transform: scale(0.95) !important;
  -webkit-transform: scale(0.95) !important;
}

/* 按钮悬停效果（支持touch设备） */
.center-draw-button:active {
  transform: scale(0.95) !important;
  -webkit-transform: scale(0.95) !important;
  opacity: 0.8 !important;
}

.lottery-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 15rpx;
}

/* 🔧 修复：转盘Canvas样式优化 - 确保不遮挡指针 */
.wheel-canvas {
  transform-origin: center center !important;
  will-change: auto !important;
  /* 硬件加速优化 */
  -webkit-transform: translateZ(0) !important;
  backface-visibility: hidden !important;
  /* 🎯 层级优化：降低z-index，确保指针在转盘之上 */
  z-index: 5 !important; /* 🎯 降低层级，让指针(z-index: 100)在上层 */
  position: absolute !important;
  pointer-events: none !important;
  /* 🔧 环境兼容性增强 */
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* 🎯 新增：转动指针样式 - 指针转动方案 */
.lottery-pointer {
  transform-origin: center center !important;
  will-change: transform !important;
  /* 硬件加速优化 */
  -webkit-transform: translateZ(0) !important;
  backface-visibility: hidden !important;
  /* 确保动画平滑 */
  transition-timing-function: ease-out !important;
  transition-property: transform !important;
  /* 🎯 层级优化：确保指针在转盘之上 */
  z-index: 15 !important;
  position: absolute !important;
  pointer-events: none !important;
  /* 🔧 环境兼容性增强 */
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* 🎯 指针指示器样式 - 增强可见性 */
.pointer-indicator {
  position: absolute !important;
  top: 5px !important;
  left: 50% !important;
  transform: translateX(-50%) !important;
  width: 0;
  height: 0;
  border-left: 15px solid transparent;
  border-right: 15px solid transparent;
  border-top: 35px solid #FF4444;
  /* 添加阴影效果增强视觉效果 */
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.6));
  /* 添加发光效果 */
  z-index: 30 !important;
  display: block !important;
  visibility: visible !important;
}

.pointer-indicator::after {
  content: '';
  position: absolute;
  top: -35px;
  left: -12px;
  width: 0;
  height: 0;
  border-left: 12px solid transparent;
  border-right: 12px solid transparent;
  border-top: 32px solid #FFD700;
  /* 内层金色指针 */
  transform: scale(0.8);
  z-index: 31 !important;
}

/* 🎯 修复：使用测试转盘的成功样式 */
.test-pointer-fixed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform-origin: center center;
  z-index: 100; /* 🎯 最高层级，确保在所有元素之上 */
  /* 🎯 关键：总是启用过渡动画 */
  transition: transform 3s cubic-bezier(0.25, 0.1, 0.25, 1);
  -webkit-transition: -webkit-transform 3s cubic-bezier(0.25, 0.1, 0.25, 1);
  pointer-events: none;
}

/* 指针箭头 */
.pointer-arrow-fixed {
  position: absolute;
  top: 20rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 40rpx solid transparent;
  border-right: 40rpx solid transparent;
  border-top: 80rpx solid #FF0000;
  transform: translateX(-50%);
  z-index: 101;
  /* 增强可见性 */
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.8));
}

/* 指针中心圆点 */
.pointer-center-fixed {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30rpx;
  height: 30rpx;
  background: #FF0000;
  border: 6rpx solid #FFFFFF;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 102;
  box-shadow: 0 0 20rpx rgba(255, 0, 0, 0.8);
}


/* pages/lottery/lottery.wxss - 抽奖页面样式 */

/* 🚨 真机兼容性重置 - 确保基础样式正常显示 */
page {
  background-color: transparent !important;
}

/* 🎨 CSS变量定义 - 修复未定义变量问题 */
:root {
  --primary-color: #FF6B35;
  --text-color: #333333;
  --gray-color: #666666;
  --bg-color: #f5f5f5;
  --border-color: #e0e0e0;
  --text-secondary: #999999;
}

page {
  --primary-color: #FF6B35;
  --text-color: #333333;
  --gray-color: #666666;
  --bg-color: #f5f5f5;
  --border-color: #e0e0e0;
  --text-secondary: #999999;
}

view {
  box-sizing: border-box !important;
}

button {
  -webkit-appearance: none !important;
  appearance: none !important;
  outline: none !important;
  border: none !important;
}

text {
  display: inline !important;
  word-wrap: break-word !important;
}

/* 强制显示样式 */
.force-visible {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  position: relative !important;
}

/* 🎯 真机兼容 - 中央抽奖按钮样式强化 */
.center-draw-button {
  /* 强制样式优先级 */
  width: 80px !important;
  height: 80px !important;
  border-radius: 40px !important;
  background: linear-gradient(135deg, #FF6B35, #FF8C42) !important;
  color: white !important;
  border: 4px solid white !important;
  font-size: 14px !important;
  font-weight: bold !important;
  text-align: center !important;
  line-height: 72px !important;
  box-shadow: 0 8px 20px rgba(255, 107, 53, 0.8) !important;
  display: block !important;
  position: relative !important;
  margin: 0 !important;
  padding: 0 !important;
  outline: none !important;
  -webkit-appearance: none !important;
  /* 真机兼容性增强 */
  z-index: 999999 !important;
  pointer-events: auto !important;
  -webkit-transform: translateZ(0) !important;
  transform: translateZ(0) !important;
  will-change: transform !important;
  /* 动画状态 */
  transition: all 0.3s ease !important;
}

/* 真机兼容 - 按钮容器强化 */
.center-button-container {
  position: absolute !important;
  z-index: 999999 !important;
  pointer-events: auto !important;
  display: block !important;
  width: 80px !important;
  height: 80px !important;
  /* 硬件加速 */
  -webkit-transform: translateZ(0) !important;
  transform: translateZ(0) !important;
  will-change: transform !important;
}

/* 真机兼容 - 各种定位方案 */
.center-button-container.method-transform {
  top: 50% !important;
  left: 50% !important;
  transform: translate(-50%, -50%) translateZ(0) !important;
  -webkit-transform: translate(-50%, -50%) translateZ(0) !important;
}

.center-button-container.method-margin {
  top: 50% !important;
  left: 50% !important;
  margin-top: -40px !important;
  margin-left: -40px !important;
}

.center-button-container.method-fixed {
  top: 90px !important;
  left: 90px !important;
}

/* 抽奖中状态 */
.center-draw-button.drawing {
  opacity: 0.8 !important;
  transform: scale(0.95) !important;
  -webkit-transform: scale(0.95) !important;
}

/* 按钮悬停效果（支持touch设备） */
.center-draw-button:active {
  transform: scale(0.95) !important;
  -webkit-transform: scale(0.95) !important;
  opacity: 0.8 !important;
}

.lottery-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 15rpx;
}

/* 显示结果时的全局状态 - 修复版本 */
.lottery-container.showing-result .wheel-section,

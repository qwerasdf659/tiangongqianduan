  50% { 
    transform: translateY(-12rpx) scale(1.1) translateZ(0);
    box-shadow: 
      0 0 80rpx rgba(255, 215, 0, 1.0),
      0 0 160rpx rgba(255, 215, 0, 0.9),
      0 25rpx 50rpx rgba(255, 215, 0, 0.6),
      0 0 0 12rpx rgba(255, 215, 0, 0.4);
    opacity: 1;
  }
}

/* 抽奖中按钮动画 */
@keyframes drawingPulse {
  0%, 100% { 
    transform: scale(1);
    opacity: 1;
  }
  50% { 
    transform: scale(1.05);
    opacity: 0.8;
  }
}

/* 旋转动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}


/* 抽奖结果弹窗 - 🔴 关键修复：确保最高层级，防止被转盘覆盖 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999999 !important; /* 🔴 设置为极高的z-index值 */
  display: flex;
  justify-content: center;
  align-items: center;
  /* 🔴 真机调试修复：强制硬件加速 */
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  will-change: transform;
  /* 🔴 确保在所有情况下都是最顶层 */
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 99999998 !important; /* 🔴 设置为极高的z-index值 */
  /* 🔴 真机调试修复 */
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
  z-index: 999999999 !important; /* 🔴 关键修复：设置为最高层级 */
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  border: 3rpx solid #ff6b35;
  /* 🔴 真机调试修复：强制硬件加速和层级提升 */
  -webkit-transform: translateZ(99999px);
  transform: translateZ(99999px);
  will-change: transform, opacity;
  pointer-events: auto;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-50rpx) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}


  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

/* 转盘区域 */
.wheel-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 1;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 转盘加载状态 */
.wheel-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.wheel-loading .loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.wheel-loading .loading-text {
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
}

/* 抽奖中遮罩层 */
.drawing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  pointer-events: none;
}

.overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.spinner-large {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.overlay-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

/* 多连抽区域 */
.multi-draw-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-top: 15rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title-small {
  text-align: center;
  margin-bottom: 20rpx;
}

.section-title-small text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
}

/* 2x2网格容器 */
.multi-draw-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 网格行 */
.grid-row {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

/* 网格按钮 */
.grid-draw-btn, .grid-action-btn {
  flex: 1;
  height: 100rpx;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;

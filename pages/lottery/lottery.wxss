    0 4rpx 12rpx rgba(0, 0, 0, 0.15),
    0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

/* 按钮内容容器 */
.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  width: 100%;
  text-align: center;
}

/* 按钮主要文字 */
.btn-main-text {
  font-size: 28rpx;
  font-weight: 700;
  line-height: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 按钮副文字 */
.btn-sub-text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;

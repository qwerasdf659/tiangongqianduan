/* 🚀 性能优化 - 修复模糊问题 */
.prize-area,
.center-draw-btn,
.animation-ring {
  will-change: transform, box-shadow;
  transform: translateZ(0);
  backface-visibility: hidden;
  /* 修复模糊问题 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transform-style: preserve-3d;
}

/* 修复高亮时的模糊问题 */
.prize-area.highlighted {

  border-radius: 12rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 6rpx rgba(255, 68, 68, 0.4);
  animation: bounce 2s infinite;
  z-index: 10;
}

/* 按钮点击效果 */
.grid-draw-btn:active, .grid-action-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.2),

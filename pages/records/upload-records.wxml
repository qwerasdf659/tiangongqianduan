<!--pages/records/upload-records.wxml-->
<view class="container">
  <!-- 页面头部 -->
  <view class="header">
    <view class="header-content">
      <view class="back-btn" bindtap="onBack">
        <text class="back-icon">◀</text>
      </view>
      <view class="header-title">
        <text class="title-text">上传记录</text>
        <text class="title-desc">我的小票上传历史</text>
      </view>
      <view class="header-actions">
        <text class="total-count">共{{total}}次</text>
      </view>
    </view>
  </view>

  <!-- 统计卡片 -->
  <view class="statistics-card" wx:if="{{!loading}}">
    <view class="stat-item">
      <text class="stat-number">{{statistics.totalCount}}</text>
      <text class="stat-label">上传次数</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{statistics.totalPoints}}</text>
      <text class="stat-label">获得积分</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{statistics.approvedCount}}</text>
      <text class="stat-label">已通过</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{statistics.pendingCount}}</text>
      <text class="stat-label">待审核</text>
    </view>
  </view>

  <!-- 筛选标签 -->
  <view class="filter-tabs">
    <view 
      class="filter-tab {{filterStatus === 'all' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-status="all"
    >
      <text>全部</text>
    </view>
    <view 
      class="filter-tab {{filterStatus === 'pending' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-status="pending"
    >
      <text>待审核</text>
    </view>
    <view 
      class="filter-tab {{filterStatus === 'approved' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-status="approved"
    >
      <text>已通过</text>
    </view>
    <view 
      class="filter-tab {{filterStatus === 'rejected' ? 'active' : ''}}"
      bindtap="onFilterChange"
      data-status="rejected"
    >
      <text>已拒绝</text>
    </view>
  </view>

  <!-- 记录列表 -->
  <view class="records-list" wx:if="{{!loading}}">
    <view 
      class="record-item"
      wx:for="{{records}}" 
      wx:key="id"
    >
      <view class="record-header">
        <view class="upload-info">
          <text class="upload-time">{{item.created_at}}</text>
          <text class="amount-info">金额：￥{{item.amount}}</text>
        </view>
        <view class="upload-status">
          <text class="status-text {{item.status}}">
            {{item.status_text}}
          </text>
        </view>
      </view>
      
      <view class="record-content">
        <image 
          class="receipt-image" 
          src="{{item.image_url}}" 
          mode="aspectFill"
          bindtap="onPreviewImage"
          data-image="{{item.image_url}}"
        />
        <view class="upload-details">
          <view class="points-info" wx:if="{{item.points_earned > 0}}">
            <text class="points-label">获得积分：</text>
            <text class="points-value">+{{item.points_earned}}</text>
          </view>
          <view class="review-info" wx:if="{{item.review_time}}">
            <text class="review-time">审核时间：{{item.review_time}}</text>
          </view>
          <view class="review-reason" wx:if="{{item.review_reason}}">
            <text class="reason-text">{{item.review_reason}}</text>
          </view>
        </view>
      </view>
      
      <view class="record-actions">
        <button 
          class="action-btn detail-btn"
          bindtap="onViewDetail"
          data-record="{{item}}"
        >
          查看详情
        </button>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{records.length === 0}}">
      <text class="empty-icon">📸</text>
      <text class="empty-text">还没有上传记录</text>
      <text class="empty-desc">快去拍小票赚积分吧！</text>
      <button class="goto-upload-btn" bindtap="onGoToUpload">
        去上传
      </button>
    </view>

    <!-- 🔧 临时：调试工具面板 -->
    <view class="debug-panel" style="margin: 20px; padding: 15px; background: #f0f0f0; border-radius: 8px;">
      <text style="font-size: 14px; color: #666; display: block; margin-bottom: 10px;">🔧 临时调试工具（修复完成后会移除）</text>
      <view style="display: flex; flex-wrap: wrap; gap: 10px;">
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px;" bindtap="onDebugDiagnose">诊断问题</button>
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px;" bindtap="onDebugForceRefresh">强制刷新</button>
        <button class="mini-btn" style="font-size: 12px;" bindtap="onDebugShowToken">查看Token</button>
      </view>
    </view>

    <!-- 🔧 新增：状态筛选测试面板 -->
    <view class="debug-panel" style="margin: 20px; padding: 15px; background: #fff3cd; border-radius: 8px; border: 1px solid #ffeaa7;">
      <text style="font-size: 14px; color: #856404; display: block; margin-bottom: 10px;">🧪 状态筛选功能测试</text>
      <view style="display: flex; flex-wrap: wrap; gap: 10px; margin-bottom: 10px;">
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px; background: #28a745; color: white;" bindtap="onTestSpecificStatus" data-status="approved">测试已通过</button>
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px; background: #dc3545; color: white;" bindtap="onTestSpecificStatus" data-status="rejected">测试已拒绝</button>
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px; background: #ffc107; color: #212529;" bindtap="onTestSpecificStatus" data-status="pending">测试待审核</button>
        <button class="mini-btn" style="font-size: 12px; background: #6c757d; color: white;" bindtap="onTestSpecificStatus" data-status="all">测试全部</button>
      </view>
      <view style="display: flex; flex-wrap: wrap; gap: 10px;">
        <button class="mini-btn" style="margin-right: 10px; font-size: 12px; background: #007bff; color: white;" bindtap="onTestStatusFilter">完整诊断</button>
        <button class="mini-btn" style="font-size: 12px; background: #17a2b8; color: white;" bindtap="onQuickFix">一键修复</button>
      </view>
    </view>

    <!-- 加载更多 -->
    <view class="load-more" wx:if="{{hasMore && records.length > 0}}" bindtap="loadMoreRecords">
      <text class="load-text">{{loading ? '加载中...' : '加载更多'}}</text>
    </view>

    <!-- 没有更多 -->
    <view class="no-more" wx:if="{{!hasMore && records.length > 0}}">
      <text class="no-more-text">没有更多记录了</text>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <text class="loading-text">加载中...</text>
    </view>
  </view>
</view>
/* pages/records/exchange-records.wxss */

/* 继承抽奖记录页面的基础样式 */
@import "lottery-records.wxss";

/* 兑换记录特有样式 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-status {
  text-align: right;
}

.status-text {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.status-text.pending {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.status-text.shipped {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.status-text.completed {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.record-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.product-quantity {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.points-cost {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b35;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  background: transparent;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1;
}

.action-btn.detail-btn {
  border-color: #667eea;
  color: #667eea;
}

.action-btn.service-btn {
  border-color: #4ecdc4;
  color: #4ecdc4;
}

.goto-exchange-btn {
  background: linear-gradient(45deg, #4ecdc4, #44a08d);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(68, 160, 141, 0.3);
} 
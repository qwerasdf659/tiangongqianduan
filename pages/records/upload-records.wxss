.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.upload-info {
  flex: 1;
}

.upload-time {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.amount-info {
  font-size: 22rpx;
  color: #999;
}

.upload-status {
  text-align: right;
}

.status-text {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.status-text.pending {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.status-text.approved {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.status-text.rejected {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

.record-content {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.receipt-image {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
}

.upload-details {
  flex: 1;
}

.points-info {
  margin-bottom: 12rpx;
}

.points-label {
  font-size: 24rpx;
  color: #666;
}

.points-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4caf50;
}

.review-info {
  margin-bottom: 8rpx;
}

.review-time {
  font-size: 22rpx;
  color: #999;
}

.review-reason {
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.reason-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  background: transparent;
  border: 2rpx solid #667eea;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #667eea;
  line-height: 1;
}

.goto-upload-btn {
  background: linear-gradient(45deg, #9c27b0, #673ab7);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(156, 39, 176, 0.3);
}



.title-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}


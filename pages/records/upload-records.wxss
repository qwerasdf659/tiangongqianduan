.filter-section {
  background: white;
  padding: 15px;
  border-radius: 8px;
  margin: 10px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 10px;
  border-radius: 6px;
  font-size: 14px;
  color: #666;
  background: #f5f5f5;
  margin: 0 4px;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #ff6b35;
  color: white;
  font-weight: 500;
}


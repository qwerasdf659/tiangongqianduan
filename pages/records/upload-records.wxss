.statistics {
  display: flex;
  justify-content: space-around;
  background: white;
  padding: 20px;
  border-radius: 8px;
  margin: 10px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #666;
}
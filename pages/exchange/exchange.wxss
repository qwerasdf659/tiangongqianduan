/* pages/exchange/exchange.wxss - 商品兑换页面样式 */

.exchange-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  padding: 20rpx;
}

/* 🎯 方案2优化：导航模块平滑过渡效果 */
.nav-module {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

/* 🎭 页面过渡状态 - 修复：移除缩小效果 */
.nav-module.page-transitioning {
  /* transform: scale(0.98); 已移除缩小效果 */
  opacity: 1; /* 保持完全不透明 */
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08); /* 保持正常阴影 */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* 平滑过渡 */
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item:last-child {
  border-bottom: none;
}

.nav-item.active {
  background: linear-gradient(90deg, #FF6B35, #F7931E);
  border-radius: 15rpx;
  padding: 20rpx 25rpx;
  margin: 5rpx 0;
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.3);
}

.nav-item.active .nav-icon {
  color: white !important;
}

.nav-item.active .nav-text {
  color: white;
}

/* 🎯 交易市场导航按钮优化 */
.trade-market-nav {
  cursor: pointer;
  overflow: visible;
  border-radius: 15rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

/* hover效果已移除 */

/* 按钮按下状态已完全移除 */

/* 导航中状态已完全移除 */

/* navigatingPulse动画已移除 */

/* 🎨 导航图标容器 */
.nav-icon-container {
  position: relative;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  color: #FF6B35;
  transition: all 0.3s ease;
}

.trade-market-nav.navigating .nav-icon {
  color: #F7931E;
  transform: scale(1.1);
}

/* 🎨 小型加载动画 */
.nav-loading-icon {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 20rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner-small {
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid rgba(255, 107, 53, 0.3);
  border-top: 2rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.nav-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
  transition: all 0.3s ease;
  flex: 1;
}

.trade-market-nav.navigating .nav-text {
  color: #FF6B35;
  font-weight: 600;
}

/* 🎯 导航箭头容器 */
.nav-arrow-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-arrow {
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-arrow.animating {
  color: #FF6B35;
  animation: rotateArrow 1.5s linear infinite;
  transform: scale(1.2);
}

@keyframes rotateArrow {
  0% { transform: rotate(0deg) scale(1.2); }
  100% { transform: rotate(360deg) scale(1.2); }
}

/* 🎯 跳转进度指示器 */
.nav-progress {
  position: absolute;
  bottom: -8rpx;
  left: -15rpx;
  right: -15rpx;
  height: 4rpx;
  background: rgba(255, 107, 53, 0.2);
  border-radius: 2rpx;
  overflow: hidden;
}

.nav-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #FF6B35, #F7931E);
  border-radius: 2rpx;
  animation: progressBarFill 2s ease-in-out infinite;
}

@keyframes progressBarFill {
  0% { 
    width: 0%; 
    transform: translateX(-100%); 
  }
  50% { 
    width: 100%; 
    transform: translateX(0%); 
  }
  100% { 
    width: 100%; 
    transform: translateX(100%); 
  }
}

/* 🎨 按钮波纹效果 */
.nav-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 107, 53, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  transition: all 0.6s ease-out;
}

.nav-ripple.active {
  width: 200rpx;
  height: 200rpx;
  opacity: 0;
}

/* 🎯 悬浮提示 */
.nav-tooltip {
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
  z-index: 10;
}

.nav-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 6rpx solid transparent;
  border-top-color: rgba(0, 0, 0, 0.8);
}

/* tooltip hover效果已移除 */

/* 🎭 导航状态指示器 */
.nav-status-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 0;
  border-top: 1rpx dashed rgba(255, 107, 53, 0.3);
  margin-top: 15rpx;
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF6B35;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: statusDotPulse 1.5s infinite;
}

@keyframes statusDotPulse {
  0%, 100% { 
    transform: scale(1); 
    opacity: 1; 
  }
  50% { 
    transform: scale(1.3); 
    opacity: 0.7; 
  }
}

.status-text {
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: 500;
}

/* 🎯 当前页面状态标签 */
.nav-status.current {
  position: absolute;
  top: -5rpx;
  right: 10rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #FF6B35;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 🔄 页面过渡遮罩 */
.page-transition-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.9), rgba(247, 147, 30, 0.9));
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.page-transition-overlay.active {
  opacity: 1;
  visibility: visible;
}

.transition-content {
  text-align: center;
  color: white;
  animation: transitionContentSlide 0.6s ease-out;
}

@keyframes transitionContentSlide {
  0% {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.transition-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  animation: transitionIconSpin 2s linear infinite;
}

@keyframes transitionIconSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.transition-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  display: block;
}

.transition-progress {
  width: 300rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  overflow: hidden;
  margin: 0 auto;
}

.transition-progress-bar {
  height: 100%;
  background: white;
  border-radius: 3rpx;
  animation: transitionProgressFill 1.5s ease-in-out infinite;
}

@keyframes transitionProgressFill {
  0% { 
    width: 0%; 
    transform: translateX(-100%); 
  }
  100% { 
    width: 100%; 
    transform: translateX(0%); 
  }
}

/* 🎨 响应式优化 */
@media (max-width: 400px) {
  .nav-tooltip {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
  }
  
  .transition-icon {

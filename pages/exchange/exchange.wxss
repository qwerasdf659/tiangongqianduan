/* pages/exchange/exchange.wxss - 商品兑换页面样式 */

.exchange-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  padding: 20rpx;
}

/* 页面头部 */
.header {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.points-info {
  display: flex;
  align-items: center;
  background: var(--secondary-color);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
}

.points-label {
  font-size: 24rpx;
  color: white;
  margin-right: 8rpx;
}

.points-value {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #ffffff40;
  border-top: 6rpx solid var(--secondary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--gray-color);
}

/* 商品区域 */
.products-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.section-title text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  display: block;
  margin-bottom: 8rpx;
}

.tips {
  font-size: 24rpx;
  color: var(--gray-color);
}

/* 商品网格 - 2×10布局 */
.products-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.product-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.product-item:not(.sold-out):not(.insufficient-points):hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 0 12rpx 40rpx rgba(78, 205, 196, 0.3);
}

.product-item.sold-out,
.product-item.insufficient-points {
  opacity: 0.6;
}

/* 商品图片 */
.product-image-container {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  background: var(--bg-color);
}

.stock-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
}

.stock-badge.low-stock {
  background: #ff4444;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.sold-out-overlay,
.insufficient-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.insufficient-overlay {
  background: rgba(255, 68, 68, 0.8);
}

/* 商品信息 */
.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 22rpx;
  color: var(--gray-color);
  margin-bottom: 12rpx;
  line-height: 1.4;
  height: 60rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-points {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.points-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.points-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--secondary-color);
}

/* 兑换按钮 */
.exchange-btn-container {
  padding: 0 20rpx 20rpx;
}

.exchange-btn {
  width: 100%;
  background: var(--secondary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.exchange-btn:not(.disabled):hover {
  background: #3ab7ae;
  transform: scale(1.05);
}

.exchange-btn.disabled {
  background: #cccccc;
  color: #999999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--gray-color);
  margin-bottom: 30rpx;
  display: block;
}

.retry-btn {
  background: var(--secondary-color);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  color: var(--text-color);
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

/* 弹窗通用样式 */
.confirm-modal,
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 确认弹窗 */
.confirm-header,
.result-header {
  background: var(--secondary-color);
  color: white;
  padding: 30rpx;
  text-align: center;
  position: relative;
}

.confirm-title,
.result-title {
  font-size: 36rpx;
  font-weight: 600;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 40rpx;
  cursor: pointer;
}

.product-preview {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.preview-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: var(--bg-color);
}

.preview-info {
  flex: 1;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
  display: block;
}

.preview-desc {
  font-size: 24rpx;
  color: var(--gray-color);
  margin-bottom: 16rpx;
  display: block;
}

.preview-cost,
.remaining-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.cost-label,
.remaining-label {
  font-size: 26rpx;
  color: var(--text-color);
}

.cost-points {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--secondary-color);
}

.remaining-points {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.confirm-footer,
.result-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  background: var(--bg-color);
  color: var(--text-color);
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.confirm-btn,
.continue-btn,
.record-btn {
  flex: 1;
  background: var(--secondary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 结果弹窗 */
.result-content {
  padding: 40rpx;
  text-align: center;
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.success-text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--secondary-color);
  margin-bottom: 30rpx;
  display: block;
}

.result-details {
  background: var(--bg-color);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: var(--gray-color);
}

.detail-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-color);
}

.pickup-notice {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(255, 107, 53, 0.1);
  padding: 16rpx;
  border-radius: 8rpx;
  display: block;
}

/* 规则说明 */
.rules-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
}

.rules-content {
  margin-top: 20rpx;
}

.rule-item {
  font-size: 26rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .products-grid {
    grid-template-columns: 1fr;
  }
  
  .product-preview {
    flex-direction: column;
  }
  
  .preview-image {
    width: 100%;
    height: 200rpx;
  }
} 
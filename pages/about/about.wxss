/* pages/about/about.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 页面头部 */
.header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  display: flex;
  align-items: center;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.back-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.header-title {
  flex: 1;
  text-align: center;
  margin-left: 20rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.title-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

/* 应用信息 */
.info-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.app-logo {
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
  display: block;
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
  display: block;
  margin-bottom: 20rpx;
}

.app-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  text-align: left;
}

/* 通用分组样式 */
.company-section,
.features-section,
.team-section,
.updates-section,
.contact-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

/* 公司信息 */
.company-info {
  padding: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 160rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.info-value.link {
  color: #667eea;
  text-decoration: underline;
}

/* 功能特色 */
.features-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.feature-item:hover {
  border-color: #667eea;
  background: #fff;
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 团队成员 */
.team-members {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.member-item {
  width: calc(50% - 10rpx);
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.member-item:hover {
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #e0e0e0;
}

.member-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.member-role {
  font-size: 22rpx;
  color: #666;
}

/* 更新日志 */
.update-logs {
  padding: 30rpx;
}

.log-item {
  margin-bottom: 20rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.log-item:last-child {
  margin-bottom: 0;
}

.log-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  cursor: pointer;
}

.log-version {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.log-date {
  font-size: 22rpx;
  color: #666;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.log-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.log-content.show {
  max-height: 500rpx;
}

.feature-log {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.feature-log:last-child {
  border-bottom: none;
}

.feature-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

/* 联系我们 */
.contact-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.contact-content.show {
  max-height: 300rpx;
}

.contact-methods {
  padding: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-item:hover {
  background: #e3f2fd;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.contact-action {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

/* 操作按钮 */
.action-section {
  margin: 20rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border: 2rpx solid #667eea;
  backdrop-filter: blur(10rpx);
}

/* 法律条款 */
.legal-section {
  margin: 20rpx;
  text-align: center;
}

.legal-links {
  margin-bottom: 20rpx;
}

.legal-link {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
}

.legal-divider {
  margin: 0 20rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.copyright {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .member-item {
    width: 100%;
  }
  
  .action-section {
    flex-direction: column;
  }
}
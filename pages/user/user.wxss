/* pages/user/user.wxss - 用户中心页面样式 */

/* 🔧 修复：定义CSS变量 - 解决积分明细不显示问题 */
page {
  --text-color: #333333;
  --gray-color: #666666;
  --bg-color: #f5f5f5;
  --border-color: #e0e0e0;
  --blue-start: #667eea;
  --blue-end: #764ba2;
}

.user-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--bg-color);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: var(--blue-start);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.edit-icon {
  font-size: 16rpx;
  color: white;
}

.user-info {
  flex: 1;
}

.user-name {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-right: 12rpx;
}

.edit-phone {
  font-size: 20rpx;
  opacity: 0.6;
}

.user-id {
  font-size: 24rpx;
  color: var(--gray-color);
}

.user-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-item {
  background: var(--blue-start);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.action-item:hover {
  background: var(--blue-end);
  transform: scale(1.05);
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 20rpx;
  font-weight: 600;
}

/* 积分卡片 */
.points-card {
  background: linear-gradient(45deg, var(--blue-start), var(--blue-end));
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: white;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.points-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(102, 126, 234, 0.4);
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.test-points-card-btn {
  background: rgba(255, 255, 255, 0.3);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 16rpx;
  width: 48rpx;
  height: 48rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.points-title {
  font-size: 28rpx;
  font-weight: 600;
}

.points-tips {
  font-size: 22rpx;
  opacity: 0.8;
}

.points-amount {
  margin-bottom: 30rpx;
}

.points-number {
  font-size: 72rpx;
  font-weight: 700;
  margin-right: 12rpx;
}

.points-unit {
  font-size: 32rpx;
  opacity: 0.8;
}

.points-actions {
  display: flex;
  justify-content: center;
}

.points-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* 积分明细 */
.points-detail {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  animation: slideDown 0.3s ease-out;
  /* 🔧 修复：确保积分明细可见 */
  position: relative;
  z-index: 10;
  min-height: 200rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #667eea;
}

/* 🔧 强制显示积分明细 - 调试模式 */
.points-detail-debug {
  background: rgba(255, 255, 255, 0.95) !important;
  border-radius: 20rpx !important;
  margin-bottom: 30rpx !important;
  position: relative !important;
  z-index: 999 !important;
  min-height: 200rpx !important;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1) !important;
  border: 5rpx solid #ff0000 !important;
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.test-points-btn {
